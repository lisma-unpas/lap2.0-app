generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  USER
  ADMIN
}

enum RegStatus {
  PENDING
  VERIFIED
  REJECTED
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String?        @unique
  password      String?
  role          Role           @default(USER)
  registrations Registration[]
}

model Registration {
  id               String    @id @default(cuid())
  userId           String?
  unitId           String    // Reference to UNIT_CONFIG key (e.g. "tesas", "kds")
  subEventName     String?   // Sub-event name from UI/Forms
  status           RegStatus @default(PENDING)
  fullName         String
  nim              String?
  major            String?
  phoneNumber      String
  email            String
  detailedData     Json?     // For dynamic form fields per unit
  documentUrls     Json?
  paymentProof     String?
  registrationCode String?   // Pattern: XXXX-XXXX-XXXX (Shared per checkout session)
  totalPrice       Int       @default(0)
  createdAt        DateTime  @default(now())
  user             User?     @relation(fields: [userId], references: [id])
  tickets          Ticket[]

  @@index([registrationCode])
  @@index([unitId])
}

model Ticket {
  id             String       @id @default(cuid())
  registrationId String
  ticketCode     String       @unique
  isUsed         Boolean      @default(false)
  issuedAt       DateTime     @default(now())
  registration   Registration @relation(fields: [registrationId], references: [id])
}

model Info {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  body      String   @db.Text
  category  String
  imageUrl  String?
  createdAt DateTime @default(now())
}

model UnitSetting {
  id          String   @id @default(cuid())
  unitId      String   @unique // Reference to UNIT_CONFIG key (e.g. "tesas", "kds")
  limit       Int      @default(100)
  updatedAt   DateTime @updatedAt
}
